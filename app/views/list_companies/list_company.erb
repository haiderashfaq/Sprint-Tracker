<div class="container mt-5">
  <div class="row justify-content-center">
	  <div class="col-xl-10 col-lg-12 col-md-9">
      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
          <div class="d-flex justify-content-center">
            <%= image_tag "logo.png" , class: 'logo'%>
            <h1 class="ms-3 h4 text-dark mt-2 ">Company List</h1>
          </div>
  
          <%= form_with url: list_companies_url do |form| %>
            <% if @companies.empty? %>
                <div class="container text-center">
                  <%= render partial: 'Shared/no_resource_present', locals: { record: 'projects.project_label' } %>
                </div>
            <% else %>
                    <% @companies.each do |company| %>
                        <div class="card w-100 text-center" style="width: 18rem;">
                        <div class="card-body">
                        <%= form.label company.name %>
                          <br>
                          <%= link_to "Go to link",  new_user_session_url(subdomain: company.subdomain), {class: 'btn btn-primary'}%>
                        </div>
                        </div>
						            
                    <% end %>
            <% end %>
          <% end %>

	                               
	                        
        </div>
      </div>
    </div>
  </div>
