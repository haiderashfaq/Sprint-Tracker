<div id="comment_<%= comment.id %>">
<div class="col-sm-12 mb-3">
	<div class="card shadow-lg">
		<div class="card-body">
			<div class="card-text">
				<%= render partial: 'comments/avatar', locals:{commenter: comment.commenter} %>
				<%= comment.commenter.name.camelize %>
				<div class="d-flex mt-2">
					<div class="p-2 flex-grow-1">
						<%= comment.description.to_s %>
					</div>
					<div class="col-1">
						<% if can? :edit, comment %>
							<%= link_to '', edit_issue_comment_path(commentable, comment), remote: true , class: "bi bi-pencil" %>
						<% end %>
						<% if can? :destroy, comment %>
							<%= link_to '',issue_comment_path(commentable, comment), remote: true , method: :delete, data: {confirm: t('shared.confirmation') }, class: "bi bi-trash" %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
</div>