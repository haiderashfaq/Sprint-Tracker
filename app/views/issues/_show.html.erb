<div class="container">
  <div id="flash_messages"></div>
  <div id="issue_show">
    <div class="row">
      <div class="d-flex mt-4 mb-4">
        <i class='bx bx-alarm'></i>
        <% total_logged_time = issue.total_time_spent %>
        <% time_progression_ratio = issue.time_progression %>
        <%= render partial: "time_logs/progress", locals: { instance: issue, time_progression_ratio: time_progression_ratio, total_logged_time: total_logged_time, width:"w-100", estimated_time: issue.estimated_time} %>
      </div>
    </div>
    <div class="row gx-6">
      <div class="col-12 col-sm-6">
        <div class="row ">
          <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
            <%= t('issues.title') %>:
          </div>
          <div class="col-12 col-sm-7 col-md-7 col-lg-8">
            <p><%= issue.title %></p>
          </div>
        </div>
      </div>
      <div class="col-12 col-sm-6">
        <div class="row ">
          <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
            <%= t('issues.status') %>:
          </div>
          <div class="col-12 col-sm-7 col-md-7 col-lg-8">
            <p><%= issue.status.camelize %></p>
          </div>
        </div>
      </div>
      <div class="col-12 col-sm-6">
        <div class="row ">
          <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
            <%= t('issues.description') %>:
          </div>
          <div class="col-12 col-sm-7 col-md-7 col-lg-8">
            <p><%= issue.description %></p>
          </div>
        </div>
      </div>
      <div class="col-12 col-sm-6">
        <div class="row ">
          <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
            <%= t('issues.priority') %>:
          </div>
          <div class="col-12 col-sm-7 col-md-7 col-lg-8">
            <p><%= issue.priority.camelize %></p>
          </div>
        </div>
      </div>
      <div class="col-12 col-sm-6">
        <div class="row ">
          <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
            <%= t('issues.estimated_start_date') %>:
          </div>
          <div class="col-12 col-sm-7 col-md-7 col-lg-8">
            <p><%= convert_to_date(issue&.estimated_start_date) %></p>
          </div>
        </div>
      </div>
      <div class="col-12 col-sm-6">
        <div class="row ">
          <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
            <%= t('issues.estimated_end_date') %>:
          </div>
          <div class="col-12 col-sm-7 col-md-7 col-lg-8">
            <p><%= convert_to_date(issue&.estimated_end_date) %></p>
          </div>
        </div>
      </div>
      <div class="col-12 col-sm-6">
        <div class="row ">
          <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
            <%= t('issues.actual_start_date') %>:
          </div>
          <div class="col-12 col-sm-7 col-md-7 col-lg-8">
            <p><%= convert_to_date(issue&.actual_end_date) %></p>
          </div>
        </div>
      </div>
      <div class="col-12 col-sm-6">
        <div class="row ">
          <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
            <p><%= t('issues.actual_end_date') %>:<p>
            </div>
            <div class="col-12 col-sm-7 col-md-7 col-lg-8">

              <p><%= convert_to_date(issue&.actual_end_date) %></p>
            </div>
          </div>
        </div>
        <div class="col-12 col-sm-6">
          <div class="row ">
            <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
              <%= t('issues.estimated_time') %>:
            </div>
            <div class="col-12 col-sm-7 col-md-7 col-lg-8">
              <p> <%= issue.estimated_time.to_s %></p>
            </div>
          </div>
        </div>
        <div class="col-12 col-sm-6">
          <div class="row ">
            <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
              <%= t('issues.reviewer') %>:
            </div>
            <div class="col-12 col-sm-7 col-md-7 col-lg-8">
              <p> <%= issue.reviewer&.name %></p>
            </div>
          </div>
        </div>
        <div class="col-12 col-sm-6">
          <div class="row ">
            <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
              <%= t('issues.creator') %>:
            </div>
            <div class="col-12 col-sm-7 col-md-7 col-lg-8">
              <p> <%= issue.creator&.name %></p>
            </div>
          </div>
        </div>
        <div class="col-12 col-sm-6">
          <div class="row ">
            <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
              <%= t('issues.assignee') %>:
            </div>
            <div class="col-12 col-sm-7 col-md-7 col-lg-8">
              <p> <%= issue.assignee&.name %></p>
            </div>
          </div>
        </div>
        <div class="col-12 col-sm-6">
          <div class="row ">
            <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
              <%= t('projects.project_label') %>:
            </div>
            <div class="col-12 col-sm-7 col-md-7 col-lg-8">
              <p> <%= issue.project&.name %></p>
            </div>
          </div>
        </div>
        <div class="col-12 col-sm-6">
          <div class="row ">
            <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
              <%= t('projects.project_label') %>:
            </div>
            <div class="col-12 col-sm-7 col-md-7 col-lg-8">
              <div class="col-4 justify-content-end">
                <%= link_to t('issues.watcher'), add_watcher_issues_url(:issue_id => { issue_id: @issue.id }), remote:true , class: "btn btn-primary w-100 bi bi-pencil" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<hr/>