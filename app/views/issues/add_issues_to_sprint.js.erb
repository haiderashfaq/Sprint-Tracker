<% if @errors %>
  $('#modal .modal-flash-messages').prepend("<%= escape_javascript render partial: 'shared/flash_messages', flash: flash %>");
<% else %>
  $('#modal').modal('hide');
  $('#flash_messages').html("<%= escape_javascript render partial: 'shared/flash_messages', flash: flash %>");
  <% @issues.each do |issue| %>
    $("#issue_<%= issue.id %>").remove()
  <% end %>

  <% count = @issues[0].sprint.issues.count %>
  $("#sprint_<%= @sprint.sequence_num %> #no_of_issues").html("<%= "#{pluralize(count, t('issues.issue_label'))}" %>")
<% end %>
