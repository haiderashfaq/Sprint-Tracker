<% if @issue.errors.blank? %>
  $('#issue_<%= @issue.sequence_num %>').remove();
  if ($("#issues_datatable_body tr").length == 0) {
    $('#issues_datatable_space').html("<%= escape_javascript (render partial: 'shared/no_resource_present', locals: { record: 'issues.issue_label' }) %>");
  }
<% end %>
$('#flashMessages').html("<%= escape_javascript render partial: 'shared/flash_messages', flash: flash %>");