<div class="container">
  <div class="row my-3">
    <div class="col card dashboard-card-border shadow-lg mx-1">
      <h6 class="card-header"><%= t('shared.to_do').capitalize %><small class="px-1"><%= issues_to_do.size %></small></h6>
      <div class="card-body">
        <% issues_to_do.each do |issue| %>
          <div class="card shadow-lg my-3">
            <div class="card-body">
              <div class="card-title">
                <%= link_to issue.title, issue %>
              </div>
              <div class="card-subtitle badge bg-<%= issues_priority_pill_selection(issue.priority) %> mb-2 ">
                <%= issue.priority %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col card dashboard-card-border shadow-lg mx-1">
